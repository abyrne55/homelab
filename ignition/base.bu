---
variant: fiot
version: 1.0.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  abyrne55
      groups:
        - wheel
storage:
  directories:
    - path: /srv/Movies
      mode: 0755
    - path: /srv/TV
      mode: 0755
    - path: /srv/transmission
      mode: 0755
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: balconypi
    - path: /etc/containers/registries.conf.d/homelab.conf
      mode: 0644
      contents:
        inline: |
          [[registry]]
          location = "10.0.2.2:5000"
          insecure = true
    - path: /etc/systemd/system/podman-auto-update.timer.d/override.conf
      mode: 0644
      contents:
        inline: |
          [Timer]
          OnCalendar=daily
          Persistent=true
systemd:
  units:
    - name: podman-auto-update.timer
      enabled: true
    - name: podman.socket
      enabled: true
